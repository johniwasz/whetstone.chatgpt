<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<Version>0.2</Version>
		<Authors>John Iwasz</Authors>		
		<Description>
			This is a sample GPT-3 API user interface in Blazor.
		</Description>
		<Copyright>Copyright 2023 John Iwasz</Copyright>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Pages\Prompts\TableGenerator.razor.js" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Blazored.LocalStorage" Version="4.4.0" />
		<PackageReference Include="Blazorise.Components" Version="1.3.1" />
		<PackageReference Include="Blazorise.DataGrid" Version="1.3.1" />
		<PackageReference Include="Blazorise.LoadingIndicator" Version="1.3.1" />
		<PackageReference Include="Markdig.Signed" Version="0.33.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.13" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.12" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Blazorise" Version="1.3.1" />
		<PackageReference Include="Blazorise.Bootstrap5" Version="1.3.1" />
		<PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.3.1" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.7.0" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\..\..\Whetstone.ChatGPT\Whetstone.ChatGPT.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Content Update="wwwroot\brand-logo.png">
	    <PackagePath>\</PackagePath>
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	    <Pack>True</Pack>
	  </Content>
	</ItemGroup>

</Project>
