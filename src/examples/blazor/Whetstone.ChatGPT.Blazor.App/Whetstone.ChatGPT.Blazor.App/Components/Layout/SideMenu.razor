<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Dashboard" />
                    Dashboard
                </BarLink>
            </BarItem>
            <BarItem @bind-Visibility="@IsVisible">
                <BarLink To="/imagegenerator">
                    <BarIcon IconName="IconName.Image" />
                    Image Generator
                </BarLink>
            </BarItem>
            <BarItem @bind-Visibility="@IsVisible">
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Edit" />
                        Prompts
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem  To="/prompts/playground">Playground</BarDropdownItem>
                        <BarDropdownItem To="/prompts/studynotes">Study Notes</BarDropdownItem>
                        <BarDropdownItem To="/prompts/tablegenerator">Table Generator</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>
@code {
    RenderFragment customIcon =@<img src="/brand-logo.png" style="width:32px; height: 32px" />;
}