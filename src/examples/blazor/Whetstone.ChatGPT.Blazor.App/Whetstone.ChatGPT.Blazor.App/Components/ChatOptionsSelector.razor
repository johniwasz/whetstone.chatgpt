@inject IChatGPTClient ChatClient

<Field>
    <FieldLabel>Model</FieldLabel>
    <Select @ref="modelList" @bind-SelectedValue="@SelectedModel">
        @if (models is not null)
        {
            foreach (ChatGPT.Models.ChatGPTModel model in models)
            {
                <SelectItem Value="@model.Id">@model.Id</SelectItem>
            }
        }
    </Select>
</Field>


<Field>
    <Slider @bind-Value="@MaxTokens" Min="16" Max="4000" />
    <Tooltip Text="The maximum number of tokens to generate. Requests can use up to 
4,000 tokens shared between prompt and completion. 
The exact limit varies by model. (One token is roughly 4 characters for normal English text)" >
    <FieldLabel>Maximum Tokens: @MaxTokens</FieldLabel>
    </Tooltip>
</Field>

<Field>
    <Slider @bind-Value="@Temperature" Min="0.0f" Max="1.0f" Step="0.01f" TValue="float" />
    <Tooltip Text="Controls radomness: Lowering results in less random completions. 
As the temperature approaches zero, the model will become deterministic and repeatative.">
    <FieldLabel>Temperature: @Temperature</FieldLabel>
    </Tooltip>
</Field>