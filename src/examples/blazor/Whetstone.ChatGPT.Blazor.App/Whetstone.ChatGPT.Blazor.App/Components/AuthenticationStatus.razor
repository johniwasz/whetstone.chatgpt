
@inject NavigationManager Navigation

@inject IOpenAICredentialValidator credentialValidator

@if (AppState.IsOpenAIAuthenticated)
{
    <Button Clicked="@(async() => await PurgeCredentialsAsync())"><Blazorise.Icons.FontAwesome.Icon Name="IconName.Lock" IconSize="IconSize.Large" />Clear API Key</Button>
}
else
{
    <Button Clicked="@ShowLogin">
        <Blazorise.Icons.FontAwesome.Icon Name="IconName.LockOpen" IconSize="IconSize.Large"/>Validate API Key</Button>
}

<LogIn @ref="loginModal"></LogIn>
